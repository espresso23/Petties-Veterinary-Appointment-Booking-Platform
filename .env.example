# ============================================
# PETTIES - Environment Variables Template
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file to Git!
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Local Development (Docker)
POSTGRES_DB=petties_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Production (Neon) - Uncomment and fill for production
# DB_HOST=ep-quietproject.neon.tech
# DB_PORT=5432
# DB_NAME=postgres
# DB_USERNAME=postgres
# DB_PASSWORD=your-password-here

# MongoDB - Local Development
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin
MONGO_INITDB_DATABASE=petties_nosql

# MongoDB Atlas - Production (URI format)
# MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# ============================================
# QDRANT CLOUD (Vector Database)
# ============================================
# Qdrant Cloud is used for both dev and prod
# Get your cluster URL and API key from: https://cloud.qdrant.io
QDRANT_URL=https://your-cluster-id.region.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here

# ============================================
# AI ARCHITECTURE (Cloud-Only - RECOMMENDED)
# ============================================
# LLM Provider: openrouter
LLM_PROVIDER=openrouter

# OpenRouter API Key (LLM)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-...
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# Cohere API Key (Embeddings)
# Get from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your-cohere-key-here
COHERE_EMBEDDING_MODEL=embed-multilingual-v3.0

# ============================================
# OLLAMA CONFIGURATION (Legacy/Backup)
# ============================================
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2

# ============================================
# JWT SECRET
# ============================================
# Development (minimum 32 chars)
JWT_SECRET=devSecretKeyForLocalDevelopmentOnly123456789012345678901234

# Production (minimum 64 chars for security)
# JWT_SECRET=YourProductionSecretKeyMinimum64CharactersLongForSecurityPurposesChangeThisToRandomString

# ============================================
# EMAIL SMTP (OTP Verification)
# ============================================
# Gmail App Password - NOT your regular password!
# Create at: https://myaccount.google.com/apppasswords
MAIL_USERNAME=pettiesservice@gmail.com
MAIL_PASSWORD=

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# SPRING BOOT CONFIGURATION
# ============================================
# Use 'dev' for development, 'prod' for production
SPRING_PROFILES_ACTIVE=dev

# ============================================
# AI SERVICE CONFIGURATION
# ============================================
# Environment: development or production
ENVIRONMENT=development

# Debug mode: true for development, false for production
APP_DEBUG=true


