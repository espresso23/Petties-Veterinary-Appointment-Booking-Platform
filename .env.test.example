# ============================================
# PETTIES - Test Environment Variables Template
# Copy this to .env.test on EC2 and fill in values
# ============================================

# ============================================
# SPRING BOOT BACKEND CONFIGURATION
# ============================================
SPRING_PROFILES_ACTIVE=test

# ============================================
# NEON DATABASE - TEST BRANCH
# ============================================
# Create a new branch in Neon: Branches > Create child branch
# Name it "test" and use its connection string here
DB_HOST_TEST=ep-your-test-branch.ap-southeast-1.aws.neon.tech
DB_PORT=5432
DB_NAME_TEST=postgres
DB_USERNAME=postgres
DB_PASSWORD_TEST=your-test-branch-password

# Full connection URL for AI Service
DATABASE_URL_TEST=postgresql://postgres:your-test-branch-password@ep-your-test-branch.ap-southeast-1.aws.neon.tech:5432/postgres?sslmode=require

# ============================================
# MONGODB - TEST DATABASE
# ============================================
# Option 1: Use same cluster but different database name
# Option 2: Use separate cluster for test
MONGO_URI_TEST=mongodb+srv://petties_db_user:password@cluster.mongodb.net/petties_test?retryWrites=true&w=majority

# ============================================
# JWT SECRET
# ============================================
# Can use same as production or different for isolation
JWT_SECRET=YourTestSecretKeyMinimum64CharactersLongForSecurityPurposesTestEnv1234567890

# ============================================
# QDRANT CLOUD (Vector Database)
# ============================================
# Can share with production (uses different collection prefix)
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# ============================================
# OLLAMA CONFIGURATION
# ============================================
LLM_PROVIDER=ollama
OLLAMA_API_KEY=sk-your-ollama-api-key
OLLAMA_BASE_URL=https://ollama.com
OLLAMA_MODEL=kimi-k2:1t-cloud
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ============================================
# EMAIL SMTP (Optional for test)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=pettiesservice@gmail.com
MAIL_PASSWORD=your_gmail_app_password

# ============================================
# GOOGLE OAUTH (Optional for test)
# ============================================
GOOGLE_CLIENT_ID=YOUR_WEB_CLIENT_ID.apps.googleusercontent.com
