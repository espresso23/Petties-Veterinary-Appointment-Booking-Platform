# Auto detect text files and perform LF normalization
* text=auto

# Source code files - always use LF
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.gradle text eol=lf
*.kt text eol=lf
*.java text eol=lf
*.swift text eol=lf
*.m text eol=lf
*.h text eol=lf
*.c text eol=lf
*.cpp text eol=lf

# Scripts - use platform-specific line endings
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Build files (binary) - don't modify
*.apk binary
*.ipa binary
*.app binary
*.aab binary
*.jar binary
*.aar binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

