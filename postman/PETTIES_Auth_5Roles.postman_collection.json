{
    "info": {
        "_postman_id": "petties-auth-collection",
        "name": "PETTIES Auth - 5 Roles Demo",
        "description": "Collection to register and login with 5 roles for demo",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8080/api/auth"
        }
    ],
    "item": [
        {
            "name": "1. Register",
            "item": [
                {
                    "name": "Register ADMIN",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\",\n    \"email\": \"admin@petties.com\",\n    \"phone\": \"0901234567\",\n    \"role\": \"ADMIN\"\n}"
                        },
                        "url": "{{baseUrl}}/register"
                    }
                },
                {
                    "name": "Register VET",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
