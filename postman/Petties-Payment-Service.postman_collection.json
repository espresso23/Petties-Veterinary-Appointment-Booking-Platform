{
	"info": {
		"_postman_id": "petties-payments",
		"name": "Petties - Payment Service API (Consolidated)",
		"description": "API endpoints cho Payment Service - Gộp từ Transaction, SePay và Payment controllers",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Payment Service - Consolidated",
			"auth": {
				"type": "bearer",
				"bearer": [
					{
						"key": "token",
						"value": "{{accessToken}}",
						"type": "string"
					}
				]
			},
			"item": [
				{
					"name": "0. Đăng nhập Admin",
					"auth": {
						"type": "noauth"
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Đăng nhập thành công', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"const jsonData = pm.response.json();",
									"",
									"if (jsonData && jsonData.accessToken) {",
									"    pm.environment.set('accessToken', jsonData.accessToken);",
									"    pm.collectionVariables.set('accessToken', jsonData.accessToken);",
									"}",
									"",
									"if (jsonData &&json Data.refreshToken) {",
									"    pm.environment.set('refreshToken', jsonData.refreshToken);",
									"    pm.collectionVariables.set('refreshToken', jsonData.refreshToken);",
									"}",
									"",
									"if (jsonData && jsonData.role) {",
									"    pm.environment.set('role', jsonData.role);",
									"    pm.collectionVariables.set('role', jsonData.role);",
									"}",
									"",
									"console.log('Đã lưu accessToken vào biến môi trường/collection');"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"{{adminUsername}}\",\n  \"password\": \"{{adminPassword}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						},
						"description": "Đăng nhập để lấy accessToken"
					},
					"response": []
				},
				{
					"name": "1. Get Payment Method (NEW)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"console.log('Payment Method Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has payment method info', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('paymentMethod');",
									"    pm.expect(jsonData).to.have.property('isQrPayment');",
									"    pm.expect(jsonData.paymentMethod).to.match(/^(QR|CASH|CARD)$/);",
									"});",
									"",
									"console.log('Payment Method:', pm.response.json().paymentMethod);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/payments/{{qrBookingId}}/method",
							"host": ["{{baseUrl}}"],
							"path": ["payments", "{{qrBookingId}}", "method"]
						},
						"description": "Lấy payment method thật từ DB (QR/CASH/CARD) - thay thế is-qr endpoint cũ"
					},
					"response": []
				},
				{
					"name": "2. Get Payment Description",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"console.log('Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has required fields', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success');",
									"    pm.expect(jsonData).to.have.property('bookingId');",
									"    pm.expect(jsonData).to.have.property('paymentDescription');",
									"});",
									"",
									"if (pm.response.json().success && pm.response.json().paymentDescription) {",
									"    pm.globals.set('paymentDescription', pm.response.json().paymentDescription);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/payments/{{qrBookingId}}/description",
							"host": ["{{baseUrl}}"],
							"path": ["payments", "{{qrBookingId}}", "description"]
						},
						"description": "Generate payment description cho QR booking"
					},
					"response": []
				},
				{
					"name": "3. Get Booking Total Price",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"console.log('Total Price Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has total price', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('totalPrice');",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"if (pm.response.json().success) {",
									"    pm.globals.set('totalPrice', pm.response.json().totalPrice);",
									"    console.log('Total Price:', pm.response.json().totalPrice);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/payments/{{qrBookingId}}/total",
							"host": ["{{baseUrl}}"],
							"path": ["payments", "{{qrBookingId}}", "total"]
						},
						"description": "Lấy total price của booking"
					},
					"response": []
				},
				{
					"name": "4. Check Payment Status (QR)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"console.log('QR Status Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has status info', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('status');",
									"    pm.expect(jsonData.status).to.match(/^(PAID|PENDING)$/);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{accessToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/payments/{{qrBookingId}}/status",
							"host": ["{{baseUrl}}"],
							"path": ["payments", "{{qrBookingId}}", "status"]
						},
						"description": "Check QR payment status (PET_OWNER role required)"
					},
					"response": []
				},
				{
					"name": "5. Get Payment History (By PetOwner)",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"console.log('Payment History Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has payments array', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success');",
									"    pm.expect(jsonData).to.have.property('payments');",
									"    pm.expect(jsonData.payments).to.be.an('array');",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/payments/history/petowner/{{petOwnerId}}?limit=50&status={{paymentStatus}}",
							"host": ["{{baseUrl}}"],
							"path": ["payments", "history", "petowner", "{{petOwnerId}}"],
							"query": [
								{
									"key": "limit",
									"value": "50"
								},
								{
									"key": "status",
									"value": "{{paymentStatus}}"
								}
							]
						},
						"description": "Lấy lịch sử thanh toán theo petOwnerId (ADMIN role required)"
					},
					"response": []
				},
				{
					"name": "6. List SePay Transactions",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"console.log('SePay Transactions Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has transactions array', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success');",
									"    pm.expect(jsonData).to.have.property('transactions');",
									"    pm.expect(jsonData.transactions).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/payments/sepay/transactions?limit=200",
							"host": ["{{baseUrl}}"],
							"path": ["payments", "sepay", "transactions"],
							"query": [
								{
									"key": "limit",
									"value": "200"
								}
							]
						},
						"description": "Lấy danh sách giao dịch từ SePay"
					},
					"response": []
				},
				{
					"name": "7. Get All Bookings (Admin)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"console.log('All Bookings Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has bookings array', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success');",
									"    pm.expect(jsonData).to.have.property('count');",
									"    pm.expect(jsonData).to.have.property('bookings');",
									"    pm.expect(jsonData.bookings).to.be.an('array');",
									"});",
									"",
									"pm.test('Bookings count matches array length', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.count).to.equal(jsonData.bookings.length);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/payments/admin/all-bookings",
							"host": ["{{baseUrl}}"],
							"path": ["payments", "admin", "all-bookings"]
						},
						"description": "Lấy tất cả bookings (ADMIN role required)"
					},
					"response": []
				}
			],
			"description": "All payment-related endpoints consolidated under /api/payments"
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"if (!pm.globals.get('baseUrl')) {",
					"    pm.globals.set('baseUrl', 'http://localhost:8080');",
					"}",
					"",
					"if (!pm.globals.get('qrBookingId')) {",
					"    pm.globals.set('qrBookingId', '123e4567-e89b-12d3-a456-426614174001');",
					"}",
					"",
					"if (!pm.globals.get('petOwnerId')) {",
					"    pm.globals.set('petOwnerId', '00000000-0000-0000-0000-000000000000');",
					"}",
					"",
					"console.log('=== Payment Service API (Consolidated) ===');",
					"console.log('Base URL:', pm.globals.get('baseUrl'));",
					"console.log('Booking ID:', pm.globals.get('qrBookingId'));"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"console.log('=== Test Completed ===');",
					"console.log('Response Time:', pm.response.responseTime + 'ms');",
					"console.log('Status Code:', pm.response.code);"
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "adminUsername",
			"value": "",
			"type": "string"
		},
		{
			"key": "adminPassword",
			"value": "",
			"type": "string"
		},
		{
			"key": "accessToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "refreshToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "role",
			"value": "",
			"type": "string"
		},
		{
			"key": "qrBookingId",
			"value": "123e4567-e89b-12d3-a456-426614174001",
			"type": "string"
		},
		{
			"key": "petOwnerId",
			"value": "00000000-0000-0000-0000-000000000000",
			"type": "string"
		},
		{
			"key": "paymentStatus",
			"value": "",
			"type": "string"
		}
	]
}
