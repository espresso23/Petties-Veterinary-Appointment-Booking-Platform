							"raw": "{{baseUrl}}/api/payments/history/clinic/{{clinicId}}?limit=50",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"history",
								"clinic",
								"{{clinicId}}"
							],
							"query": [
								{
									"key": "limit",
									"value": "50"
								}
							]
						},
						"description": "Admin can view any clinic's payments. ClinicOwner can only view their own."
					}
				},
				{
					"name": "[Admin] PetOwner History by ID",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{accessToken}}",
