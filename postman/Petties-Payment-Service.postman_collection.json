						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/payments/history/petowner/{{petOwnerId}}?limit=50",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"history",
								"petowner",
								"{{petOwnerId}}"
							],
							"query": [
								{
									"key": "limit",
									"value": "50"
								}
							]
						},
						"description": "Admin-only endpoint to view specific pet owner's payment history"
					}
				}
			]
		},
