{
	"info": {
		"_postman_id": "petties-payments-rbac",
		"name": "Petties - Payments with RBAC",
		"description": "Payment API with Role-Based Access Control",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login - Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Login OK', () => pm.response.to.have.status(200));",
									"const json = pm.response.json();",
									"if (json?.accessToken) pm.collectionVariables.set('accessToken', json.accessToken);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\"username\":\"{{adminUsername}}\",\"password\":\"{{adminPassword}}\"}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						}
					}
				},
