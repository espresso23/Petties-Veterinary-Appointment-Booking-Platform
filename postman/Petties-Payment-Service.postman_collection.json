		{
			"name": "Payment History - RBAC (NEW)",
			"item": [
				{
					"name": "[PetOwner] My Payments",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status 200', () => pm.response.to.have.status(200));",
									"pm.test('Has payments array', () => {",
									"    const json = pm.response.json();",
									"    pm.expect(json.payments).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{petOwnerToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/payments/history/my-payments?limit=50",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"history",
								"my-payments"
							],
							"query": [
								{
									"key": "limit",
									"value": "50"
								},
								{
									"key": "status",
									"value": "PAID",
									"disabled": true
								}
							]
						},
						"description": "PetOwner can view their own payment history"
					}
				},
				{
					"name": "[ClinicOwner] My Clinic Payments",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status 200', () => pm.response.to.have.status(200));",
									"pm.test('Has clinic info', () => {",
									"    const json = pm.response.json();",
									"    pm.expect(json).to.have.property('clinicId');",
									"    pm.expect(json).to.have.property('clinicName');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{clinicOwnerToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/payments/history/my-clinic?limit=50",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"history",
								"my-clinic"
							],
							"query": [
								{
									"key": "limit",
									"value": "50"
								}
							]
						},
						"description": "ClinicOwner/Manager can view their clinic's payments"
					}
				},
				{
					"name": "[Admin] Clinic Payments by ID",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{accessToken}}",
									"type": "string"
