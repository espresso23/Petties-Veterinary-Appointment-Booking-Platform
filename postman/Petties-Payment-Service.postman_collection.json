{
	"info": {
		"_postman_id": "petties-payments-consolidated",
		"name": "Petties - Payment Service (Consolidated)",
		"description": "API endpoints cho Payment Service - Consolidated từ Transaction, SePay và Payment controllers",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Payment Service",
			"item": [
				{
					"name": "0. Login Admin",
					"auth": {
						"type": "noauth"
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Login successful', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"const jsonData = pm.response.json();",
									"if (jsonData && jsonData.accessToken) {",
									"    pm.environment.set('accessToken', jsonData.accessToken);",
									"    pm.collectionVariables.set('accessToken', jsonData.accessToken);",
									"    console.log('Access token saved:', jsonData.accessToken);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"{{adminUsername}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						}
					}
				},
				{
					"name": "1. Get Payment Method (NEW)",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"console.log('Payment Method Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Has payment method info', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('paymentMethod');",
									"    pm.expect(jsonData).to.have.property('isQrPayment');",
									"    pm.expect(jsonData.paymentMethod).to.match(/^(QR|CASH|CARD)$/);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/payments/{{qrBookingId}}/method",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"{{qrBookingId}}",
								"method"
							]
						},
						"description": "Get actual payment method from DB (QR/CASH/CARD) - replaces old is-qr endpoint"
					}
				},
				{
					"name": "2. Get Payment Description",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"console.log('Description Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Has payment description', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('paymentDescription');",
									"});"
								]
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{accessToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/payments/{{qrBookingId}}/description",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"{{qrBookingId}}",
								"description"
							]
						},
						"description": "Generate payment description for QR booking"
					}
				},
				{
					"name": "3. Get Booking Total",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"console.log('Total Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Has total price', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('totalPrice');",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/payments/{{qrBookingId}}/total",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"{{qrBookingId}}",
								"total"
							]
						},
						"description": "Get total price of booking"
					}
				},
				{
					"name": "4. Check Payment Status",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"console.log('Status Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Has status info', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('status');",
									"});"
								]
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{accessToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/payments/{{qrBookingId}}/status",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"{{qrBookingId}}",
								"status"
							]
						},
						"description": "Check QR payment status (requires PET_OWNER role)"
					}
				},
				{
					"name": "5. Get Payment History",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"console.log('History Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Has payments array', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('payments');",
									"    pm.expect(jsonData.payments).to.be.an('array');",
									"});"
								]
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{accessToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/payments/history/petowner/{{petOwnerId}}?limit=50",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"history",
								"petowner",
								"{{petOwnerId}}"
							],
							"query": [
								{
									"key": "limit",
									"value": "50"
								},
								{
									"key": "status",
									"value": "{{paymentStatus}}",
									"disabled": true
								}
							]
						},
						"description": "Get payment history by petOwnerId (requires ADMIN role)"
					}
				},
				{
					"name": "6. List SePay Transactions",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"console.log('SePay Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Has transactions array', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('transactions');",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/payments/sepay/transactions?limit=200",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"sepay",
								"transactions"
							],
							"query": [
								{
									"key": "limit",
									"value": "200"
								}
							]
						},
						"description": "List SePay transactions"
					}
				},
				{
					"name": "7. Get All Bookings (Admin)",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"console.log('All Bookings Response:', pm.response.json());",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Has bookings array', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('bookings');",
									"    pm.expect(jsonData.bookings).to.be.an('array');",
									"});"
								]
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{accessToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/payments/admin/all-bookings",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"payments",
								"admin",
								"all-bookings"
							]
						},
						"description": "Get all bookings (requires ADMIN role)"
					}
				}
			]
		}
